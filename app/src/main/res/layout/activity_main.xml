<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F62E2E"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notestitle"
        android:text="NOTES"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview"
        android:layout_below="@id/notestitle"
        android:layout_above="@id/addnewnotebutton"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/addnewnotebutton"
        android:layout_width="285dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/white"
        android:text="Add new Note"
        android:textColor="#F62E2E" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/undobtn"
        android:layout_width="285dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/addnewnotebutton"
        android:backgroundTint="@color/white"
        android:text="Undo Delete"
        android:textColor="#F62E2E" />


</RelativeLayout>